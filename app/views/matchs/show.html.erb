<% week_end = ["Saturday", "Sunday"] %>

<div class="container">

  <% day = Date.parse(@date).strftime("%A, %d %b %Y")  %>
  <h1><%= day %></h1>
  <p><%= link_to 'Reload', new_path(params[:date]) %></p>

    <% @day.matchs.order(:hour).each do |match| %>
      <% if week_end.exclude?(day.split(',')[0]) %>
        <% if match.hour.split(':')[0].to_i >=  17 %>
          <div class="card" style="background-image: linear-gradient(rgba(0,0,0,0.6), rgba(0,0,0,0.7));">
            <div class="card-description">
              <h5><%= match.hour %></h5><p><%= match.channel %></p>
              <h3><%= match.name %></h3>
            </div>
            <div class="card-right">
              <%= link_to match, method: :delete do %>
                <p> <i class="far fa-trash-alt"></i> </p>
              <% end %>
            </div>
          </div>
      <% end %>
        <% elsif match.hour.split(':')[0].to_i >=  14 %>
        <div class="card" style="background-image: linear-gradient(rgba(0,0,0,0.6), rgba(0,0,0,0.7));">
          <div class="card-description">
            <h5><%= match.hour %></h5><p><%= match.channel %></p>
            <h3><%= match.name %></h3>
          </div>
          <div class="card-right">
              <%= link_to match, method: :delete do %>
                <p> <i class="far fa-trash-alt"></i> </p>
              <% end %>
          </div>
        </div>
      <% end %>
    <% end %>
</div>


